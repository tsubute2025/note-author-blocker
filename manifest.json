{
  "manifest_version": 3,
  "name": "note author blocker",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://note.com/*"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://note.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
